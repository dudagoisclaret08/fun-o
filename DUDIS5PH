def peso():
  nome=input("qual seu nome")
  peso= int(input("seu peso"))
  altura=float(input("sua altura"))
  resutado= peso / (altura*altura)

  if resutado>= 18.5:
    print("esta abaixo do peso")
  elif resutado>= 24.9:
    print("peso normal")
  elif resutado>= 29.9:
    print("sobrepeso")
  elif resutado>=34.9:
    print("obesidade grau 1")
  elif resutado>=39.9:
    print("obesidade grau 2 ")
  else:
    print("obesidade grau 3")

peso()



def evento():
    total= 0
    maior_participantes= 0 
    for i in range(6):
     numero=int(input(" numero de participantes de hoje  "))
     total += numero
     media= total/5
    
     if numero > maior_participantes:  
         maior_participantes = numero

    print(f"total de participantes no evento: {total}")
    print(f"media de participantes por dia: {media}")
    print(f"Maior número de participantes em um único dia: {maior_participantes}")
 
evento()





